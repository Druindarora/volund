/* === TranscriptionPanel.qss === */

/* --- Base générale --- */
QWidget {
    color: #E0E0E0;
    font-family: 'Segoe UI', sans-serif;
    font-size: 14px;
}

/* --- Labels et titres --- */

QLabel#statusLabel_ready {
    color: #4CAF50;
}

QLabel#statusLabel_error {
    color: #F44336;
}

QLabel#statusLabel_warning {
    color: #FFC107;
}

QLabel#statusLabel_neutral {
    color: #00BCD4;
}

/* --- Boutons --- */
QPushButton {
    border-radius: 5px;
    padding: 8px 14px;
    min-width: 140px;
    max-width: 240px;
}

QPushButton#recordButton {
    background-color: #59b45c;
    color: white;
    font-weight: bold;
}

QPushButton#recordButton:hover {
    background-color: #73bd75;
}

QPushButton#recordButton:disabled {
    background-color: #9e9e9e;
    color: #eeeeee;
}

QPushButton#stopButton {
    background-color: #F44336;
    color: white;
    font-weight: bold;
}

QPushButton#stopButton:hover {
    background-color: #f55347;
}

/* --- Zone timers --- */
QLabel.timerLabel {
    color: #00BCD4;
    font-weight: bold;
}
